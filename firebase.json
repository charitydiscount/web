{
  "hosting": {
    "public": "build",
    "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
    "rewrites": [
      {
        "source": "/manifest.json",
        "destination": "/manifest.json"
      },
      {
        "source": "/robots.txt",
        "destination": "/robots.txt"
      },
      {
        "source": "/en",
        "destination": "/landing-en.html"
      },
      {
        "source": "/ro",
        "destination": "/landing-ro.html"
      },
      {
        "source": "/",
        "destination": "/landing-ro.html"
      },
      {
        "source": "/app",
        "destination": "/index.html"
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  }
}
